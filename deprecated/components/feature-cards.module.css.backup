/* 
 * FeatureCards Component
 * Migrated from feature-cards.module.scss to Tailwind CSS v4
 */

.features {
  height: 1600vh;
}

@media (min-width: 800px) {
  .features {
    min-height: 90.9722222222vw;
  }
}

.features .card {
  position: absolute;
  --d: 100vh;
  will-change: transform;
  transition-duration: 1.2s;
  transition-property: opacity, transform;
  transition-timing-function: var(--ease-out-expo);
}

/* Mobile positioning - nth-child calculations */
@media (max-width: 800px) {
  .features .card:nth-child(1) {
    top: calc(
      (
        (100 * var(--vh, 1vh)) -
        117.3333333333vw -
        var(--layout-margin)
      ) /
      8 * 0
    );
  }
  
  .features .card:nth-child(2) {
    top: calc(
      (
        (100 * var(--vh, 1vh)) -
        117.3333333333vw -
        var(--layout-margin)
      ) /
      8 * 1
    );
  }
  
  .features .card:nth-child(3) {
